{
  // styled-components-config
  "styled-components.tags": ["styled", "css", "sty", "createGlobalStyle"],
  "styled-components.validate": true,
  "styled-components.lint": {},
  // icon-config
  "suggest.completionItemKindLabels": {
    "method": "  ",
    "function": "  ",
    "variable": "[]",
    "field": "  ",
    "typeParameter": "<>",
    "constant": "  ",
    "class": " פּ ",
    "interface": " 蘒",
    "struct": "  ",
    "event": "  ",
    "operator": "  ",
    "module": "  ",
    "property": "  ",
    "enum": " 練",
    "reference": "  ",
    "keyword": "  ",
    "file": "  ",
    "folder": " ﱮ ",
    "color": "  ",
    "unit": " 塞 ",
    "snippet": "  ",
    "text": "  ",
    "constructor": "  ",
    "value": "  ",
    "enumMember": "  "
  },
  // format on save
  "default": true,
  "line_length": false,
  "coc.preferences.colorSupport": true,
  "coc.highlight.document.enable": true,
  "coc.highlight.colors.enable": true,
  "coc.highlight.colorNames.enable": true,
  "coc.preferences.formatOnSaveFiletypes": ["*"],
  // eslint config
  "eslint.enable": true,
  "eslint.packageManager": ["npm", "yarn"],
  "eslint.alwaysShowStatus": false,
  "eslint.trace.server": "off",
  "eslint.run": "onType",
  "eslint.autoFixOnSave": true,
  "eslint.quiet": false,
  "eslint.onIgnoredFiles": ["warn", "off"],
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "mardown",
    "vue"
  ],
  "coc.source.emoji.filetypes": ["markdown"],
  "coc.source.emoji.triggerCharacters": ["TRIGGERCHAR"],
  "eslint.codeAction.dsableRuleComment": {
    "enable": true,
    "location": "separateLine"
  },
  "eslint.codeAction.showDocumentation": { "enable": true },
  "eslint.codeActionsOnSave.mode": ["all", "problem"],
  "eslint.format.enable": true,
  // explorer
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },
  "list.normalMappings": {
    "<C-c>": "do:exit"
  },
  "list.insertMappings": {
    "<C-c>": "do:exit"
  },
  // ts cofig
  "tsserver.enable": true,
  "tsserver.formatOnType": true,
  "tsserver.enableJavascript": true,
  "tsserver.log": "off",
  "tsserver.trace.server": "off",
  "tsserver.reportStyleChecksAsWarnings": true,
  "typescript.updateImportsOnFIleMove.enable": true,
  "typescript.referencesCodeLens.enable": true,
  "typescript.preferences.quotesStyle": "single",
  "typescript.suggestionActions.enable": true,
  "typescript.validate.enable": true,
  "typescript.showUnused": true,
  "typescript.autoClosingTags": true,
  "typescript.suggest.autoImports": true
}
